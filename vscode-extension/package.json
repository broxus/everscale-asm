{
  "name": "tvmasm-lsp",
  "displayName": "TVM Assembler",
  "description": "Language client extension for TVM Assembler",
  "publisher": "Rexagon",
  "license": "MIT",
  "homepage": "https://github.com/broxus/tycho-asm/blob/master/README.md",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.65.0"
  },
  "repository": {
    "url": "https://github.com/broxus/tycho-asm"
  },
  "scripts": {
    "vscode:prepublish": "bun run esbuild-base -- --minify",
    "vscode:build": "bun run vscode:prepublish && vsce package",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "bun run esbuild-base -- --sourcemap",
    "esbuild-watch": "bun run esbuild-base -- --sourcemap --watch"
  },
  "main": "./out/main.js",
  "contributes": {
    "languages": [
      {
        "id": "tvm",
        "extensions": [
          ".tvm"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "tvm",
        "scopeName": "source.tvm",
        "path": "./syntaxes/tvm.tmLanguage.json"
      }
    ],
    "configuration": {
      "properties": {
        "tvmasm.languageServerPath": {
          "type": "string",
          "description": "Path to the tvmasm binary"
        }
      }
    },
    "commands": [
      {
        "command": "tvmasm.restartLanguageServer",
        "title": "TVM: Restart Language Server"
      }
    ]
  },
  "categories": [
    "Formatters",
    "Linters",
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:tvm"
  ],
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^17.0.18",
    "@types/vscode": "^1.65.0",
    "@vscode/vsce": "^3.3.2",
    "esbuild": "^0.25.3",
    "vscode-test": "^1.6.1"
  }
}
