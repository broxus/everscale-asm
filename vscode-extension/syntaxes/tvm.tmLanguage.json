{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "scopeName": "source.tvm",
  "patterns": [
    {
      "include": "#tvm"
    }
  ],
  "repository": {
    "tvm": {
      "patterns": [
        {
          "include": "#comment"
        },
        {
          "include": "#instruction_ident"
        },
        {
          "include": "#instruction_arg"
        },
        {
          "include": "#intrinsic"
        }
      ]
    },
    "comment": {
      "patterns": [
        {
          "name": "comment.line.double-slash.tvm",
          "match": "(//.*$)"
        }
      ]
    },
    "intrinsic": {
      "patterns": [
        {
          "name": "keyword.other.tvm",
          "match": "@[a-zA-Z0-9#_]+"
        }
      ]
    },
    "instruction_ident": {
      "patterns": [
        {
          "name": "entity.name.function",
          "match": "(-?[0-9]?[A-Z#_][a-zA-Z0-9#_]*)"
        }
      ]
    },
    "instruction_arg": {
      "patterns": [
        {
          "name": "constant.numeric.tvm",
          "match": "(-?(0x|0b)[0-9a-fA-F]+)"
        },
        {
          "name": "constant.numeric.tvm",
          "match": "(-?[0-9]+)"
        },
        {
          "name": "keyword.other.tvm",
          "begin": "[bx@]{",
          "end": "}",
          "patterns": [
            {
              "name": "constant.numeric.tvm",
              "match": "[^}]*"
            }
          ]
        },
        {
          "name": "keyword.other.tvm",
          "begin": "(@method|@define|@use)\\(",
          "end": "\\)",
          "patterns": [
            {
              "name": "string.quoted.other.tvm",
              "match": "[^\\)]*"
            }
          ]
        },
        {
          "name": "storage.type.tvm",
          "match": "(s?\\((-\\d)?\\))"
        },
        {
          "name": "storage.type.tvm",
          "match": "([cs]\\d+)"
        },
        {
          "name": "support.constant",
          "match": "(te6ccg[A-Za-z0-9+/=]+)"
        }
      ]
    }
  }
}
